{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    // "types": ["reflect-metadata", "node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false, //严格的空检查 
  },
  "include": [
    "src"
  ]
}